@using PagedList.Mvc;
@model PagedList.IPagedList<QLHS.Models.banner>

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Banner</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Banner</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">

    <!-- Default box -->
    <div class="col-12">
        <div class="card">
            <div class=" p-2 align-items-center d-flex justify-content-between">
                <div>
                    <a href="@Url.Action("Create", "Banner")" class="btn btn-success">+Thêm mới </a>
                </div>

                <div class="card-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">

                            <input type="text" name="keyword" class="form-control float-right"
                                   placeholder="Search" value="">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0" style="height: 400px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().img)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().link)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().position)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().status)
                            </th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.img)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.position)
                                </td>
                                <td>
                                    @if (item.status == true)
                                    {
                                        <span class="badge bg-success">Hiện</span>
                                    }
                                    @if (item.status == false)
                                    {
                                        <span class="badge bg-danger">Ẩn</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Banner",new { id = item.id })"
                                       class="btn btn-success">Sửa</a>
                                    <a href="@Url.Action("Delete", "Banner", new { id = item.id })"
                                       class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, SortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">«</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalItemCount; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, SortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber == Model.TotalItemCount ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, SortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">»</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>

</section>